{
  "manifest_version": 2,
  "name": "Wideboy",
  "description": "Chrome extension that widens Google Keep's notes and WhatsApp Web's main window.",
  "version": "0.1.1",
  "permissions": [
    "https://web.whatsapp.com/",
    "https://keep.google.com/*"
  ],
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "css": ["whatsapp_web.css"],
      "matches": ["https://web.whatsapp.com/"]
    },
    {
      "css": ["google_keep.css"],
      "matches": ["https://keep.google.com/*"]
    }
  ]  
}
